<h1>Organizations</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% if !@organizations.blank?%>
    <% @organizations.each do |org| %>
      <tr>
        <td><%= link_to 'Show', org %></td>
        <td><%= org.name%></td>
        <td><%= org.info%></td>
      </tr>
    <% end %>
  <%else%>
    There are no organizations.
  <%end%>
  </tbody>
</table>

<br>