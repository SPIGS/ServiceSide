<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% if !@events.blank?%>
    <% @events.each do |event| %>
      <tr>
        <td><%= link_to 'Show', event %></td>
        <td><%= event.name%></td>
        <td><%= event.num_needed%></td>
      </tr>
    <% end %>
  <% else %>
    There are no events.
  <%end%>
  </tbody>
</table>

<br>
<% if current_user.reps_org%>
<%= link_to 'New Event', new_event_path %>
<% end %>
